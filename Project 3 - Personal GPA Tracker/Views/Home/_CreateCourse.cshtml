@{
    var grades = ViewBag.Grades;
}
<div class="modal fade" id="createCourseModal" tabindex="-1" role="dialog"
     aria-labelledby="createCourseLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div id="mainContent" class="modal-content col-sm-12">
            <form id="formCreateCourse" class="form-horizontal" method="post" action="@Url.Action("CreateCourse")">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"
                            aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="createCourseLabel">Add Course</h4>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <label for="CourseCode" class="col-sm-3 control-label">Course Code:</label>
                        <div class="col-sm-9">
                            <input type="text" name="CourseCode" id="CourseCode" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="CourseTitle" class="col-sm-3 control-label">Course Title:</label>
                        <div class="col-sm-9">
                            <input type="text" name="CourseTitle" id="CourseTitle" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="CreditHours" class="col-sm-3 control-label">Credit Hours:</label>
                        <div class="col-sm-9">
                            <input type="text" name="CreditHours" id="CreditHours" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="CourseGrade" class="col-sm-3 control-label">Grade:</label>
                        <div class="col-sm-9">
                            <select name="CourseGrade" id="CourseGrade" class="form-control">
                                @foreach(var grade in grades)
                                {
                                    <option value="@grade.LetterGrade">@grade.LetterGrade</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" id="createBtn" data-dismiss="modal">Add</button>
                    <button type="reset" class="btn">Clear</button>
                    <button type="button" class="btn" data-dismiss="modal" aria-label="Close">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
