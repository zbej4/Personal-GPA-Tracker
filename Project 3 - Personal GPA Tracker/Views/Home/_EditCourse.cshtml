@model Project_3___Personal_GPA_Tracker.Models.Course

@{
    var grades = ViewBag.Grades;
    string select = "selected";
}

<div id="mainContent" class="modal-content col-sm-12">
    <form id="formEditCourse" class="form-horizontal" method="post" action="@Url.Action("EditCourse")">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"
                    aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title" id="editCourseLabel">Edit Course: @Model.CourseCode</h4>
        </div>

        <div class="modal-body">
            <input type="hidden" name="CourseCode" id="CourseCode" class="form-control" value="@Model.CourseCode" />
            <div class="form-group">
                <label for="CourseTitle" class="col-sm-3 control-label">Course Title:</label>
                <div class="col-sm-9">
                    <input type="text" name="CourseTitle" id="CourseTitle" class="form-control" value="@Model.CourseTitle" />
                    @Html.ValidationMessageFor(model => model.CourseTitle, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="CreditHours" class="col-sm-3 control-label">Credit Hours:</label>
                <div class="col-sm-9">
                    <input type="text" name="CreditHours" id="CreditHours" class="form-control" value="@Model.CreditHours"/>
                    @Html.ValidationMessageFor(model => model.CreditHours, "", new { @class="text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="CourseGrade" class="col-sm-3 control-label">Grade:</label>
                <div class="col-sm-9">
                    <select name="CourseGrade" id="CourseGrade" class="form-control">
                        @foreach (var grade in grades)
                        {
                            <option value="@grade.LetterGrade" @if (grade.LetterGrade.Equals(Model.Grade.LetterGrade)) { @select }>@grade.LetterGrade</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary" id="editBtn" data-dismiss="modal">Add</button>
            <button type="button" class="btn" data-dismiss="modal" aria-label="Close">Cancel</button>
        </div>
        <!--Has to be placed here for submission to work since modal is not populated until delete option selected-->
        <script src="~/Scripts/editCourseForm.js"></script>
    </form>
</div>


